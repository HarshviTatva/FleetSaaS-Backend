{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "\n----------------------------------------\n[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}]\n{Message:lj}\n{Exception}\n----------------------------------------\n"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}]\n{Message:lj}\n{Exception}\n----------------------------------------\n"
        }
      }
    ]
  },
  "AllowedHosts": "*",
